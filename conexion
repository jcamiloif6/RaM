<?php
//Step1
 $db = mysqli_connect('localhost','user','password','database_name') //servidor en donde esta la base de datos, usuario(usualmente root), contraseÃ±a, nombre de la base de datos
 or die('Error connecting to MySQL server.');
?>

<html>
 <head>
 </head>
 <body>
 <h1>PHP connect to MySQL</h1>

<?php
//Step2
$query = "SELECT * FROM table_name";
mysqli_query($db, $query) or die('Error querying database.');

$result = mysqli_query($db, $query);
$row = mysqli_fetch_array($result);

echo $row['id']. ' ' . $row['cat'] . '<br/>';//Asi es la sintaxis para traer los registros de las filas
while ($row = mysqli_fetch_array($result)) {
 echo $row['id'] . ' ' . $row['cat'] . '<br />';
}
?>

</body>
</html>
